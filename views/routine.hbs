<main class="routine-page">
  <header class="hero-header">
    <h1>Your Personalized Routine</h1>
    <p>Based on your unique hair profile, here's what we recommend</p>
  </header>

  <!-- Hair profile card -->
  <section class="profile-card">
    <div class="profile-header">
      <i class="fa-solid fa-user"></i>
      <span class="profile-title">Your Hair Profile</span>
    </div>

    <!-- This text can be replaced dynamically later -->
    <p id="profileSummary" class="profile-summary">
      2C Curls, High Porosity, Medium Density, Dry Scalp
    </p>

    <div class="profile-tags" id="profileTags">
      <!-- example tags; replace with JS later -->
      <span class="tag tag-green">Scalp Health</span>
      <span class="tag tag-blue">Moderate Humidity</span>
    </div>
  </section>

  <!-- Routine cards -->
  <section class="routine-grid">
    <!-- Morning -->
    <article class="routine-card" id="morningCard">
      <header class="routine-card-header">
        <i class="fa-solid fa-sun"></i>
        <h2>Morning</h2>
      </header>
      <hr class="divider" />
      <ol class="step-list" id="morningSteps">
        <li class="step">
          <div class="step-number">1</div>
          <div class="step-content">
            <h3>Refresh</h3>
            <p>Water spray + sea salt spray</p>
            <p class="step-note">Scrunch gently to revive curls</p>
          </div>
        </li>
        <li class="step">
          <div class="step-number">2</div>
          <div class="step-content">
            <h3>Style &amp; Define</h3>
            <p>Lightweight mousse</p>
            <p class="step-note">Scrunch upward from ends to roots</p>
          </div>
        </li>
      </ol>
    </article>

    <!-- Night -->
    <article class="routine-card" id="nightCard">
      <header class="routine-card-header">
        <i class="fa-solid fa-moon"></i>
        <h2>Night</h2>
      </header>
      <hr class="divider" />
      <ol class="step-list" id="nightSteps">
        <li class="step">
          <div class="step-number">1</div>
          <div class="step-content">
            <h3>Co-Wash</h3>
            <p>Cleansing conditioner or low-poo</p>
            <p class="step-note">Massage scalp gently to stimulate circulation</p>
          </div>
        </li>
        <li class="step">
          <div class="step-number">2</div>
          <div class="step-content">
            <h3>Deep Condition</h3>
            <p>Rich moisturizing conditioner</p>
            <p class="step-note">
              Apply from mid-lengths to ends, leave for 5–10 minutes
            </p>
          </div>
        </li>
        <li class="step">
          <div class="step-number">3</div>
          <div class="step-content">
            <h3>Protect</h3>
            <p>Satin pillowcase or silk bonnet</p>
            <p class="step-note">
              Use pineapple method to preserve curls overnight
            </p>
          </div>
        </li>
      </ol>
    </article>

    <!-- Weekly -->
    <article class="routine-card" id="weeklyCard">
      <header class="routine-card-header">
        <i class="fa-solid fa-calendar"></i>
        <h2>Weekly</h2>
      </header>
      <hr class="divider" />
      <ol class="step-list" id="weeklySteps">
        <li class="step">
          <div class="step-number">1</div>
          <div class="step-content">
            <h3>Deep Treatment</h3>
            <p>Intensive hair mask or hot oil treatment</p>
            <p class="step-note">
              Apply to clean hair, cover with shower cap for 20–30 minutes
            </p>
          </div>
        </li>
        <li class="step">
          <div class="step-number">2</div>
          <div class="step-content">
            <h3>Scalp Treatment</h3>
            <p>Scalp oil massage</p>
            <p class="step-note">
              Massage for 5 minutes to boost circulation
            </p>
          </div>
        </li>
        <li class="step">
          <div class="step-number">3</div>
          <div class="step-content">
            <h3>Clarify</h3>
            <p>Clarifying shampoo</p>
            <p class="step-note">
              Remove product buildup once every 2–4 weeks
            </p>
          </div>
        </li>
      </ol>
    </article>
  </section>

  <!-- Pro tip card -->
  <section class="tip-card" id="tipCard">
    <div class="tip-icon">!</div>
    <div class="tip-content">
      <h3>Pro Tip</h3>
      <p>
        Waves love lightweight products! Avoid heavy creams that can weigh
        down your natural texture. Start with small amounts and build up only
        where needed.
      </p>
    </div>
  </section>
</main>
