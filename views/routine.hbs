<main class="routine-page">
  <header class="hero-header">
    <h1>Your Personalized Routine</h1>
    <p>Based on your unique hair profile, here's what we recommend</p>
  </header>

  <!-- Hair profile card -->
  <section class="profile-card">
    <div class="profile-header">
      <i class="fa-solid fa-user"></i>
      <span class="profile-title">Your Hair Profile</span>
    </div>

    <!-- This text can be replaced dynamically later -->
    <p id="profileSummary" class="profile-summary">
  {{profileSummary}}
  </p>

   <div class="profile-tags" id="profileTags">

  {{!-- Scalp condition tag --}}
  {{#if scalp}}
    <span class="tag tag-green">{{scalp}}</span>
  {{/if}}

  {{!-- Humidity tag --}}
  {{#if humidity}}
    <span class="tag tag-blue">{{humidity}}</span>
  {{/if}}

  {{!-- Goals: render one tag per selected goal --}}
  {{#if goals}}
    {{#each goals}}
      <span class="tag tag-goal">{{this}}</span>
    {{/each}}
  {{/if}}

</div>

  </section>

  <!-- Routine cards -->
  <section class="routine-grid">
    <!-- Morning -->
    <article class="routine-card" id="morningCard">
      <header class="routine-card-header">
        <i class="fa-solid fa-sun"></i>
        <h2>Morning</h2>
      </header>
      <hr class="divider" />
      <ol class="step-list" id="morningSteps">
  {{#each morningSteps}}
    <li class="step">
      <div class="step-number">{{inc @index}}</div>
      <div class="step-content">
        <h3>{{this.title}}</h3>
        <p>{{this.main}}</p>
        <p class="step-note">{{this.note}}</p>
      </div>
    </li>
  {{/each}}
</ol>

    </article>

    <!-- Night -->
    <article class="routine-card" id="nightCard">
      <header class="routine-card-header">
        <i class="fa-solid fa-moon"></i>
        <h2>Night</h2>
      </header>
      <hr class="divider" />
      <ol class="step-list" id="nightSteps">
  {{#each nightSteps}}
    <li class="step">
      <div class="step-number">{{inc @index}}</div>
      <div class="step-content">
        <h3>{{this.title}}</h3>
        <p>{{this.main}}</p>
        <p class="step-note">{{this.note}}</p>
      </div>
    </li>
  {{/each}}
</ol>

    </article>

    <!-- Weekly -->
    <article class="routine-card" id="weeklyCard">
      <header class="routine-card-header">
        <i class="fa-solid fa-calendar"></i>
        <h2>Weekly</h2>
      </header>
      <hr class="divider" />
      <ol class="step-list" id="weeklySteps">
  {{#each weeklySteps}}
    <li class="step">
      <div class="step-number">{{inc @index}}</div>
      <div class="step-content">
        <h3>{{this.title}}</h3>
        <p>{{this.main}}</p>
        <p class="step-note">{{this.note}}</p>
      </div>
    </li>
  {{/each}}
</ol>

    </article>
  </section>

  <!-- Pro tip card -->
<section class="tip-card" id="tipCard">
  <div class="tip-icon">!</div>
  <div class="tip-content">
    <h3>Pro Tip</h3>
    <p>{{proTip}}</p>
  </div>
</section>
</main>
