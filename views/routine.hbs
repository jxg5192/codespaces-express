<main class="routine-page">
  <header class="hero-header">
    <h1>Your Personalized Routine</h1>
    <p>Based on your unique hair profile, here's what we recommend</p>
  </header>

{{!-- hair profile card section with user inputs --}}
  <section class="profile-card">
    <div class="profile-header">
      <i class="fa-solid fa-user"></i>
      {{!-- <span class="profile-title">Your Hair Profile</span> --}}
      {{!-- personalized with your name for the title --}}
      <span class="profile-title">
  {{#if name}}
    {{name}}'s Hair Profile
  {{else}}
    Your Hair Profile
  {{/if}}
</span>

    </div>

    {{!-- grabbing the user inputted info from the quiz to show in the profile section --}}
    <p id="profileSummary" class="profile-summary">
  {{profileSummary}}
  </p>


 {{!-- grabbing the user inputted info from the quiz to show TAGS in the profile section --}}
   <div class="profile-tags" id="profileTags">

  {{!-- if scalp selected show green  tag --}}
  {{#if scalp}}
    <span class="tag tag-green">{{scalp}}</span>
  {{/if}}

  {{!-- if humidity selected show blue  tag --}}
  {{#if humidity}}
    <span class="tag tag-blue">{{humidity}}</span>
  {{/if}}

  {{!-- for each hair goal selected make a new tag to show in the profile section --}}
  {{#if goals}}
    {{#each goals}}
      <span class="tag tag-goal">{{this}}</span>
    {{/each}}
  {{/if}}

</div>

  </section>


  {{!-- ROUTINE SECTION --}}

{{!-- routine cards --}}
  <section class="routine-grid">

{{!-- morning routine card --}}
    <article class="routine-card" id="morningCard">
      <header class="routine-card-header">
        <i class="fa-solid fa-sun"></i>
        <h2>Morning</h2>
      </header>
      <hr class="divider" />

      {{!-- loop through each morning routine step and show title, main, and note --}}
      <ol class="step-list" id="morningSteps">
  {{#each morningSteps}}
    <li class="step">
      <div class="step-number">{{inc @index}}</div>
      <div class="step-content">
        <h3>{{this.title}}</h3>
        {{!-- <p>{{this.main}}</p> --}}
        <p class="step-main">{{this.main}}</p>
        <p class="step-note">{{this.note}}</p>
      </div>
    </li>
  {{/each}}
</ol>

    </article>

    <!-- Night -->
    <article class="routine-card" id="nightCard">
      <header class="routine-card-header">
        <i class="fa-solid fa-moon"></i>
        <h2>Night</h2>
      </header>
      <hr class="divider" />
            {{!-- loop through each night routine step and show title, main, and note --}}
      <ol class="step-list" id="nightSteps">
  {{#each nightSteps}}
    <li class="step">
      <div class="step-number">{{inc @index}}</div>
      <div class="step-content">
        <h3>{{this.title}}</h3>
        <p class="step-main">{{this.main}}</p>
        <p class="step-note">{{this.note}}</p>
      </div>
    </li>
  {{/each}}
</ol>

    </article>

    <!-- Weekly -->
    <article class="routine-card" id="weeklyCard">
      <header class="routine-card-header">
        <i class="fa-solid fa-calendar"></i>
        <h2>Weekly</h2>
      </header>
      <hr class="divider" />
            {{!-- loop through each night routine step  --}}
      <ol class="step-list" id="weeklySteps">
  {{#each weeklySteps}}
    <li class="step">
      <div class="step-number">{{inc @index}}</div>
      <div class="step-content">
        <h3>{{this.title}}</h3>
        <p class="step-main">{{this.main}}</p>
        <p class="step-note">{{this.note}}</p>
      </div>
    </li>
  {{/each}}
</ol>

    </article>
  </section>

{{!-- pro tip card - show the tip that corresponds with the curl group from user input --}}
<section class="tip-card" id="tipCard">
  <div class="tip-icon">!</div>
  <div class="tip-content">
    <h3>Pro Tip</h3>
    <p>{{proTip}}</p>
  </div>
</section>


{{!-- back to home link --}}
<section class="return-home">
  <a href="/" class="home-btn">‚Üê Back to Home</a>
</section>

</main>
